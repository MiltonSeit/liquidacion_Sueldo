--  SELECCIONAR LA BASE DE DATO --
use Recibo_Sueldo;

-- PARA BORRAR LAS TABLAS --
drop table Recibo;
drop table Asignar;
drop table Cargo;
drop table Docente;
drop table Escuela;
drop table Zona;
drop table ObraSocial;

-- 1 tabla --OBRA SOCIAL
create table ObraSocial(cod_ObraSocial int not null auto_increment,
	nombre_Obra varchar(50),
	descuento_Obra real(3,2),
	primary key(cod_ObraSocial));

-- 2 tabla ZONAS --
create table Zona(cod_Zona int not null auto_increment,
	descripcion_Zona varchar(50)not null,
	porcentaje_Zona real (3,2) not null,
	primary key(cod_Zona));
   
-- 4 tabla DOCENTES --   
create table Docente(dni_Docente int not null,
		cod_ObraSocial int not null,
        nomApe_Docente varchar(100) not null,
        direccion_Docente varchar(100),
        telefono_Docente varchar(59),
        activo char(1),
        primary key (dni_Docente),
        foreign key (cod_ObraSocial) references ObraSocial(cod_ObraSocial));

-- 5 Tabla CARGOS --
create table Cargo(cod_Cargo int not null auto_increment,
		descripcion_Cargo varchar (50) not null,
        puntos_Cargos int not null,
        primary key (cod_Cargo));    

-- tabla 6 ESCUELAS --
create table Escuela (numero_Escuela int not null ,
		cod_Zona int not null,
        nombre_Escuela varchar (100) not null,
        direccion_Escuela varchar(50),
        telefono_Escuela varchar (20),
        primary key (numero_Escuela),
        foreign key (cod_Zona) references Zona(cod_Zona));        
        
-- tabla 7  ASIGNAR --      
create table Asignar(cod_Asignar int not null auto_increment,
		dni_Docente int not null,
        cod_cargo int not null,
        numero_Escuela int not null,
		fechaIngreso datetime, 
        primary key (cod_Asignar),
        foreign key (dni_Docente) references Docente(dni_Docente),
        foreign key (cod_Cargo)   references Cargo(cod_Cargo),
        foreign key (numero_Escuela) references Escuela(numero_Escuela));
        
-- tabla 8 RECIBO --
create table Recibo(numero_Recibo int not null auto_increment,
		cod_Asignar int not null,
        sueldoBasico real(7,2) not null,
		montoAnti real(7,2) not null,
		sumaZona real(7,2) not null,
		presentismo real(7,2) not null,
		subTotal1 real(7,2) not null,
		jubilacion real(7,2) not null,
		desObraSoial real(7,2) not null,
		seguro real(7,2) not null,
		subTotal2 real(7,2) not null,
		Total real(7,2) not null,
		fechaPeriodo varchar(15)not null,
		primary key(numero_Recibo),
		foreign key(cod_Asignar) references Asignar(cod_Asignar));


-- ********************************************************************************************************
									-- AGREGAR DATOS ANTIGUEDAD --   

